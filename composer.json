{
  "name": "digital-craftsman/cqrs",
  "description": "Reduced cost of change through CQRS in Symfony",
  "type": "symfony-bundle",
  "require": {
    "php": "8.0.*|8.1.*",
    "symfony/framework-bundle": "^5.3|^6.0",
    "symfony/serializer": "^5.3|^6.0"
  },
  "require-dev": {
    "digital-craftsman/ids": "0.1.0-beta.2",
    "doctrine/orm": "^2.12",
    "friendsofphp/php-cs-fixer": "^3.3",
    "phpunit/phpunit": "^9.5",
    "symfony/security-bundle": "^6.1",
    "symfony/yaml": "^6.1",
    "vimeo/psalm": "^4.12"
  },
  "autoload": {
    "psr-4": {
      "DigitalCraftsman\\CQRS\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DigitalCraftsman\\CQRS\\": "tests/"
    }
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Christian Kolb",
      "email": "info@digital-craftsman.de"
    }
  ]
}
